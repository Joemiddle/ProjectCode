<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/radgroup"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="@string/backcolor"
        android:textSize="20sp"
        android:textStyle="bold" />


    <RadioGroup
        android:id="@+id/radgroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="280dp"
        android:layout_marginStart="151dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/red"
            android:layout_marginTop="10dp"/>


        <RadioButton
            android:id="@+id/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/white"
            android:layout_marginTop="10dp"/>

        <RadioButton
            android:id="@+id/green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/radgroup"
            android:layout_alignParentStart="true"
            android:text="@string/green"
            android:layout_marginTop="10dp"/>

        <RadioButton
            android:id="@+id/blue"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/radgroup"
            android:layout_alignParentStart="true"
            android:text="@string/blue"
            android:layout_marginTop="10dp"/>

    </RadioGroup>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/soundtog"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp"
        android:layout_marginHorizontal="20dp"
        android:text="@string/soundtog"
        android:textSize="20sp"
        android:textStyle="bold" />
    />

    <ToggleButton
        android:id="@+id/soundtog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/radgroup"
        android:layout_marginBottom="88dp" />






</RelativeLayout>
